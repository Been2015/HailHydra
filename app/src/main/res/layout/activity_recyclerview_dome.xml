<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/bt_recyclerview_dome_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="横向"/>

        <Button
            android:id="@+id/bt_recyclerview_dome_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="纵向"/>

        <Button
            android:id="@+id/bt_recyclerview_dome_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="网格"/>

        <Button
            android:id="@+id/bt_recyclerview_dome_pinterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="瀑布流"/>


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_recyclerview_dome_recyclerview"
        android:layout_width="match_parent"
        android:background="@color/color_798a9b"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>


</LinearLayout>