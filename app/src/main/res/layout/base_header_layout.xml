<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_common_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_white"
        >

        <!--左侧返回键-->

        <ImageView
            android:id="@+id/iv_common_head_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_back_gray"/>


        <!--标题-->
        <TextView
            android:id="@+id/tv_common_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题"
            android:textColor="@color/color_1a1a1a"
            android:textSize="17sp"/>


        <!--右侧可点击的文字-->

        <TextView
            android:id="@+id/tv_common_head_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text=""
            android:textColor="@color/color_808080"
            android:textSize="14sp"
            />


        <!--右侧可点击的图片-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_common_head_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"

                />





        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/head_lien"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_0c000000"/>

</LinearLayout>

