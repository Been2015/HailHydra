<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
          android:horizontalGap="1dp"
          android:keyHeight="8%p"
          android:keyWidth="33.33333%p"
          android:verticalGap="1dp"
    >
    <!--每个键 高度是屏幕的8% 宽度是33%-->
    <!-- 1，2，3-->
    <Row>
        <Key
            android:codes="49"
            android:keyLabel="1"/>
        <Key
            android:codes="50"
            android:keyLabel="2"/>
        <Key
            android:codes="51"
            android:keyLabel="3"/>
    </Row>

    <!--4，5，6-->
    <Row>
        <Key
            android:codes="52"
            android:keyLabel="4"/>
        <Key
            android:codes="53"
            android:keyLabel="5"/>
        <Key
            android:codes="54"
            android:keyLabel="6"/>
    </Row>

    <!--7，8，9-->
    <Row>
        <Key
            android:codes="55"
            android:keyLabel="7"/>
        <Key
            android:codes="56"
            android:keyLabel="8"/>
        <Key
            android:codes="57"
            android:keyLabel="9"/>
    </Row>

    <!--空白，0，删除-->
    <Row>
        <Key
            android:codes="-10"
            android:keyLabel=""/>
        <Key
            android:codes="48"
            android:keyLabel="0"/>

        <Key
            android:codes="-5"
            android:keyIcon="@android:color/transparent"/>
    </Row>

</Keyboard>
