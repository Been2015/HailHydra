<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_immersion_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="来自 https://www.jianshu.com/u/e01fe6ddfa1c "
        android:textColor="@color/color_0d95ff"/>


    <Button
        android:id="@+id/bt_all_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="顶部图片"/>


    <Button
        android:id="@+id/bt_set_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="设置状态栏颜色亮色"/>

    <Button
        android:id="@+id/bt_set_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="设置状态栏颜色黑色"/>

    <Button
        android:id="@+id/bt_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="更多使用"/>


</LinearLayout>