<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


    <com.yeqiu.hydrautils.widget.keyboard.NumberKeyBoardView
        android:id="@+id/number_key_board_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:keyBoardBackSrc="@drawable/keyboard_back_img"
        app:keyBoardDelSrc="@drawable/keyboard_del"
        app:keyBoardShowPoint="false"
        android:visibility="gone"/>

</RelativeLayout>