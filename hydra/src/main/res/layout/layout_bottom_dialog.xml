<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_10_0_0_ffffff_corners_just_top"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/ll_bottom_dialog_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_bottom_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/color_808080"
            android:textSize="16sp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/color_f1f1f1"/>

    </LinearLayout>



    <ListView
        android:id="@+id/lv_bottom_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/color_f1f1f1"
        android:dividerHeight="0.8dp"
        android:fadeScrollbars="false"
        android:fastScrollEnabled="false"
        android:scrollbars="none"
        />


</LinearLayout>