<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_common_header_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_common_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <!--左侧返回键-->

        <ImageView
            android:id="@+id/iv_common_head_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            />

        <!--标题-->
        <TextView
            android:id="@+id/tv_common_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题"
            android:textColor="@color/color_1a1a1a"
            android:textSize="17sp"/>


        <!--右侧可点击的文字-->

        <TextView
            android:id="@+id/tv_common_head_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="标题右侧"
            android:textColor="@color/color_808080"
            android:textSize="14sp"
            />


        <ImageView
            android:id="@+id/iv_common_head_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />


    </RelativeLayout>

    <View
        android:id="@+id/head_lien"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_e5e5e5"/>

</LinearLayout>

