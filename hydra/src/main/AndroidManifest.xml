            android:windowSoftInputMode="adjustPan|stateHidden">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="wx02d75af244d2596e"/>
            </intent-filter>
        </activity>


    </application>

</manifest>
